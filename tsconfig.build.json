{
	"extends": "@sofie-automation/code-standard-preset/ts/tsconfig.lib",
	"exclude": [
		"**/node_modules/**",
		"**/*spec.ts",
		"**/__tests__",
		"**/__mocks__",
		"**/scratch/**"
	],
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"*": [
				"./node_modules/*"
			],
			"atem-connection": [
				"./src/index.ts"
			]
		},
		"types": [
			"node"
		]
	}
}
