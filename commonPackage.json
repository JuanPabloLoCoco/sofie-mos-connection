{
	"description": "The properties of this file are automatically copied to all packages' package.json files",
	"scripts": {
		"precommit": "lint-staged"
	},
	"engines": {
		"node": ">=14.18.0"
	},
	"prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier"
		],
		"*.{ts,tsx,js,jsx}": [
			"eslint"
		]
	}
}
